{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"baseUrl": "src/",
		"rootDir": "src/",
		"outDir": "dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
