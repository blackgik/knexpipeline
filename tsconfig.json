{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"baseUrl": "./",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"declaration": true, // âœ… Generates .d.ts files
		"declarationMap": true,
		"lib": ["ES2020", "ES2022", "ESNext", "ESNext.Array"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
